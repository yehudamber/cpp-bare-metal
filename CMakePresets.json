{
  "version": 10,
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "RISC-V 64-bit Freestanding GCC Debug",
      "description": "Debug build with GCC for freestanding environment on RISC-V 64-bit architecture",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/cmake/riscv64-unknown-elf-gcc-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "RISC-V 64-bit Freestanding GCC Release",
      "description": "Release build with GCC for freestanding environment on RISC-V 64-bit architecture",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "${sourceDir}/cmake/riscv64-unknown-elf-gcc-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "inheritConfigureEnvironment": true
    },
    {
      "name": "release",
      "configurePreset": "release",
      "inheritConfigureEnvironment": true
    }
  ]
}