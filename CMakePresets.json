{
    "version": 10,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "gcc-base",
            "inherits": "base",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/riscv64-unknown-elf-gcc-toolchain.cmake"
        },
        {
            "name": "clang-base",
            "inherits": "base",
            "hidden": true,
            "toolchainFile": "${sourceDir}/cmake/riscv64-unknown-elf-clang-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_TRY_COMPILE_PLATFORM_VARIABLES": "TOOLCHAIN_ROOT"
            }
        },
        {
            "name": "debug",
            "inherits": "gcc-base",
            "displayName": "GCC Debug",
            "description": "Debug build with GCC",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release",
            "inherits": "gcc-base",
            "displayName": "GCC Release",
            "description": "Release build with GCC",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-debug",
            "inherits": "clang-base",
            "displayName": "Clang Debug",
            "description": "Debug build with Clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "clang-release",
            "inherits": "clang-base",
            "displayName": "Clang Release",
            "description": "Release build with Clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "inheritConfigureEnvironment": true
        },
        {
            "name": "release",
            "configurePreset": "release",
            "inheritConfigureEnvironment": true
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug",
            "inheritConfigureEnvironment": true
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release",
            "inheritConfigureEnvironment": true
        }
    ]
}
